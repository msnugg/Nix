# Clone Subnautica's Compatdata path for Nitrox to run in
cp -r "$HOME/.local/share/Steam/steamapps/compatdata/264710" "$HOME/.local/share/Steam/steamapps/compatdata/NitroxLauncher"

export STEAM_COMPAT_DATA_PATH="$HOME/.local/share/Steam/steamapps/compatdata/NitroxLauncher"
export STEAM_COMPAT_CLIENT_INSTALL_PATH="$HOME/.local/share/Steam"
launcherpath="$HOME/.local/share/Steam/steamapps/compatdata/264710/pfx/drive_c/users/steamuser/AppData/Roaming/Nitrox"

# Create the Nitrox directory if it doesn't exist
mkdir -p "$launcherpath"

# Create the launcherpath.txt file so Subnautica can locate and load Nitrox
echo "$launcherpath" > "$launcherpath/launcherpath.txt"

# Create path.txt and put Subnautica's path into it using $HOME instead of ~
echo "$HOME/.local/share/Steam/steamapps/common/Subnautica" > "$(dirname "$(readlink -f "$0")")/path.txt"

# Start the Nitrox Launcher with Proton
if ! "$HOME/.local/share/Steam/steamapps/common/Proton 6.3/proton" run NitroxLauncher.exe; then
    # If the above command failed, prompt user to install Proton 6.3
    xdg-open steam://install/1580130
    sleep 1
    echo -e "\e[31mProton 6.3 Not Found. Install it to the default steam directory\nPress any key when it finishes downloading\e[0m"
    read -n 1 -s -r -p ""
    "$HOME/.local/share/Steam/steamapps/common/Proton 6.3/proton" run NitroxLauncher.exe
fi
